<!--Title・Body一覧-->
<h1>Books</h1>
<% @books.each do |book| %>
  <p>
    <%= book.title %>
    <%= book.body %>
    <%= link_to "show", book_path(book.id) %>  <!--名前付きルート「as:'book'」-->
    <%= link_to "edit", edit_book_path(book.id) %>  <!--名前付きルート「as:'edit_book'」-->
    <%= link_to "destroy", book_path(book.id), method: :delete %>  <!--HTTPメソッド「delete」を指定-->
  </p>
<% end %>

<!--新規投稿フォーム（books#new）-->
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <%= f.label :title %>  <!--ラベル機能（タグ付け）-->
  <%= f.text_field :title %>
  <%= f.label :body %>  <!--ラベル機能（タグ付け）-->
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %> <!--books#createへ-->
<% end %>